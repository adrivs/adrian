---
import { ViewTransitions } from "astro:transitions";
import Menu from "../components/Menu.astro";
import ChangeThemeButton from "../components/ChangeThemeButton.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-silver-chalice-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <!-- <body class="dark:bg-silver-chalice-950 h-screen"> -->
  <body
    class="absolute inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"
  >
    <div class="flex w-full pt-5 pr-5">
      <div class="ml-auto">
        <ChangeThemeButton />
      </div>
    </div>
    <main class="p-20">
      <div class="flex gap-20">
        <Menu />
        <div class="w-full rounded-md">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
