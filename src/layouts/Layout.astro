---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-white">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="p-20">
		<div class="flex gap-20">
			<div class="flex flex-col gap-4 border-r-2 pr-4 border-silver-chalice-950 text-silver-chalice-950">
				<a href="/" class="hover:text-silver-chalice-800">me</a>
				<a href="/experience" class="hover:text-silver-chalice-800">experience</a>
				<a href="/blog" class="hover:text-silver-chalice-800">blog</a>
			</div>
			<slot />
		</div>
	</body>
</html>

